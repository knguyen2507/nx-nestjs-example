{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/casl": ["libs/casl/src/index.ts"],
      "@libs/cerbos": ["libs/cerbos/src/index.ts"],
      "@libs/guard": ["libs/guard/src/index.ts"],
      "@libs/postgres": ["libs/postgres/src/index.ts"],
      "@libs/redis": ["libs/redis/src/index.ts"],
      "@libs/utility": ["libs/utility/src/index.ts"],
      "@libse/rabbitmq": ["libs/rabbitmq/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
